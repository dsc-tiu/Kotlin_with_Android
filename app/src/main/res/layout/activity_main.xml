<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#D81E11"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="#C1BCBC"
        android:gravity="center_horizontal"
        android:text="Roll"
        android:textAlignment="gravity"
        android:textColor="#27DC27"
        android:textDirection="inherit"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/dice_image"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.742" />

    <ImageView
        android:id="@+id/dice_image"
        android:layout_width="152dp"
        android:layout_height="248dp"
        android:foregroundGravity="center_horizontal"
        android:src="@drawable/dice_6"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="@id/button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.501"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:background="#C1BCBC"
        android:gravity="center_horizontal"
        android:text="Roll"
        android:textAlignment="gravity"
        android:textColor="#27DC27"
        android:textDirection="inherit"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/button"
        app:layout_constraintBottom_toBottomOf="@id/button"
        app:layout_constraintTop_toTopOf="@id/button"
        tools:layout_editor_absoluteY="507dp" />

    <ImageView
        android:id="@+id/dice_image2"
        android:layout_width="152dp"
        android:layout_height="248dp"
        android:src="@drawable/dice_6"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="@id/button2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/dice_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.501"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="104dp"
        android:gravity="center_horizontal"
        android:text="total = 00"
        android:textAlignment="gravity"
        android:textDirection="inherit"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/dice_image"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="444dp"
        android:gravity="center_horizontal"
        android:text="Get Total"
        android:textAlignment="gravity"
        android:textColor="#27DC27"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@id/textView2"
        app:layout_constraintTop_toBottomOf="@id/textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>